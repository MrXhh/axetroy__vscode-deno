{
  "name": "vscode-deno",
  "displayName": "%deno.displayName%",
  "description": "%deno.description%",
  "version": "1.14.0",
  "publisher": "axetroy",
  "icon": "deno.png",
  "galleryBanner": {
    "color": "#3B3738",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/axetroy/vscode-deno"
  },
  "bugs": {
    "url": "https://github.com/axetroy/vscode-deno/issues"
  },
  "engines": {
    "vscode": "^1.41.0"
  },
  "categories": ["Programming Languages", "Other"],
  "keywords": ["deno"],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onCommand:deno.enable",
    "onCommand:deno.disable",
    "onCommand:deno.restart_server"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "typescriptServerPlugins": [
      {
        "name": "typescript-deno-plugin",
        "enableForWorkspaceTypeScriptVersions": true
      }
    ],
    "commands": [
      {
        "command": "deno.enable",
        "title": "%deno.command.enable%",
        "category": "deno"
      },
      {
        "command": "deno.disable",
        "title": "%deno.command.disable%",
        "category": "deno"
      },
      {
        "command": "deno.restart_server",
        "title": "%deno.command.restart_server%",
        "category": "deno"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Deno",
      "properties": {
        "deno.enable": {
          "type": "boolean",
          "default": false,
          "description": "%deno.config.enabled%",
          "scope": "resource"
        },
        "deno.dtsFilepaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%deno.config.dtsFilepaths%",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn compile",
    "postinstall": "cd client && yarn && cd ../server && yarn && cd .. && npm run installvscode",
    "installvscode": "node ./node_modules/vscode/bin/install",
    "watch": "tsc -b -w",
    "compile": "tsc -b",
    "check": "deno fmt --check .",
    "format": "deno fmt ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,json,md}": ["yarn format", "git add"]
  },
  "devDependencies": {
    "@types/node": "12.12.26",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "typescript": "3.7.5",
    "vscode": "1.1.36"
  },
  "dependencies": {
    "deepmerge": "^4.2.2",
    "typescript-deno-plugin": "./typescript-deno-plugin"
  }
}
